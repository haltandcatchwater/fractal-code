{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "greetings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "message": { "type": "string" },
          "timestamp": { "type": "string" }
        },
        "required": ["name", "message", "timestamp"]
      },
      "description": "Array of greeting records"
    }
  },
  "required": ["greetings"]
}
