{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "description": "ISO 8601 timestamp of the log event" },
    "level": { "type": "string", "enum": ["debug", "info", "warn", "error", "fatal"], "description": "Log severity level" },
    "source": { "type": "string", "description": "Service or component that produced the log" },
    "message": { "type": "string", "description": "Raw log message text" },
    "metadata": { "type": "object", "description": "Arbitrary key-value metadata from the source" }
  },
  "required": ["timestamp", "level", "source", "message"]
}
